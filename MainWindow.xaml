<Controls:MetroWindow x:Class="ZitrontsScannerPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        
        Title="🚀 ZITRONTS PROXY SCANNER V12"
        Height="800" Width="1600"
        WindowStartupLocation="CenterScreen"
        BorderThickness="1"
        GlowBrush="#3498db"
        ResizeMode="CanResizeWithGrip"
        WindowState="Maximized"
        BorderBrush="#3498db">

    <Window.Resources>
        <!-- RİBBON BUTON STİLİ -->
        <Style x:Key="RibbonButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding Content}" 
                                       Grid.Row="1"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,3,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980b9"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1c5980"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ÜST BİLGİ BAR -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🚀" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ZITRONTS PROXY SCANNER V12" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock Text="PROFESSIONAL EDITION" 
                               Foreground="#3498db" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,2,0,0"/>
                </StackPanel>
                <TextBlock Text="🟢 Çevrimiçi" 
                           Foreground="#2ecc71" 
                           FontSize="11"
                           Margin="30,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- RİBBON TOOLBAR -->
        <Border Grid.Row="1" Background="#34495e" Padding="10,8">
            <StackPanel>
                <!-- TARAMA GRUBU -->
                <TextBlock Text="TARAMA" 
                           Foreground="#BDC3C7" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Margin="5,0,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="5,0,0,10">
                    <!-- BAŞLAT -->
                    <Button x:Name="btnStart" Content="BAŞLAT" 
                            Tag="▶️"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#2ecc71"
                            BorderBrush="#27ae60"
                            Click="StartScan_Click"/>

                    <!-- DURDUR -->
                    <Button x:Name="btnStop" Content="DURDUR" 
                            Tag="⏹️"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#e74c3c"
                            BorderBrush="#c0392b"
                            Margin="5,0,0,0"
                            IsEnabled="False"
                            Click="StopScan_Click"/>
                </StackPanel>

                <!-- ARAÇLAR GRUBU -->
                <TextBlock Text="ARAÇLAR" 
                           Foreground="#BDC3C7" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Margin="5,5,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="5,0,0,10">
                    <!-- PROXY SCRAPER -->
                    <Button x:Name="btnProxyScraper" Content="PROXY SCRAPER" 
                            Tag="🔧"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#3498db"
                            Click="ProxyScraper_Click"/>

                    <!-- GÜNCEL PROXY -->
                    <Button x:Name="btnProxyUpdate" Content="GÜNCEL PROXY" 
                            Tag="🔄"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#f39c12"
                            Margin="5,0,0,0"
                            Click="ProxyUpdate_Click"/>

                    <!-- DNS BUL -->
                    <Button x:Name="btnDNSFinder" Content="DNS BUL" 
                            Tag="🔍"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#9b59b6"
                            Margin="5,0,0,0"
                            Click="DNSFinder_Click"/>

                    <!-- IPTV PLAYER -->
                    <Button x:Name="btnIPTVPlayer" Content="IPTV PLAYER" 
                            Tag="📺"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#e74c3c"
                            Margin="5,0,0,0"
                            Click="IPTVPlayer_Click"/>

                    <!-- ÖRÜMCEK -->
                    <Button x:Name="btnOrumcek" Content="ÖRÜMCEK" 
                            Tag="🕷️"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#8e44ad"
                            Margin="5,0,0,0"
                            Click="Orumcek_Click"/>

                    <!-- TELEGRAM TOOLS -->
                    <Button x:Name="btnTelegramTools" Content="TELEGRAM" 
                            Tag="📱"
                            Style="{StaticResource RibbonButtonStyle}"
                            Background="#1abc9c"
                            Margin="5,0,0,0"
                            Click="TelegramTools_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ANA İÇERİK -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- SOL PANEL -->
            <StackPanel Grid.Column="0">
                <!-- HEDEF AYARLARI KARTI -->
                <Border Background="White" CornerRadius="5" Padding="12" Margin="0,0,0,10"
                        BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="🎯 Hedef Ayarları" 
                                   Foreground="#2C3E50" 
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="DNS/M3U:" FontSize="11" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtTarget" 
                                 Text="panel.iptv.com:8080"
                                 FontSize="12"
                                 Padding="8"
                                 Height="32"/>

                        <TextBlock Text="Combo Dosyası:" FontSize="11" Margin="0,10,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtComboFile" 
                                     FontSize="12"
                                     Padding="8"
                                     Height="32"/>
                            <Button x:Name="btnBrowseCombo" Grid.Column="1" 
                                    Content="📁"
                                    Width="40" Height="32"
                                    Margin="5,0,0,0"
                                    Click="BrowseCombo_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- TARAMA AYARLARI KARTI -->
                <Border Background="White" CornerRadius="5" Padding="12"
                        BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="⚡ Tarama Ayarları" 
                                   Foreground="#2C3E50" 
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Bot Sayısı -->
                            <TextBlock Text="Bot Sayısı:" Grid.Row="0" Grid.Column="0" 
                                       FontSize="11" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtThreadCount" 
                                     Text="10" Grid.Row="0" Grid.Column="1"
                                     FontSize="12" Padding="5" Height="28" Margin="5,0,0,5"/>

                            <!-- Timeout -->
                            <TextBlock Text="Timeout (sn):" Grid.Row="1" Grid.Column="0" 
                                       FontSize="11" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtTimeout" 
                                     Text="7" Grid.Row="1" Grid.Column="1"
                                     FontSize="12" Padding="5" Height="28" Margin="5,0,0,5"/>

                            <!-- Checkbox -->
                            <CheckBox x:Name="chkUseProxy" 
                                      Content="Proxy Kullan"
                                      FontSize="11"
                                      Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                      Margin="0,5,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ORTA PANEL -->
            <StackPanel Grid.Column="1" Margin="10,0">
                <!-- İLERLEME -->
                <TextBlock Text="📈 İlerleme:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                <ProgressBar x:Name="pbProgress" Height="20" Minimum="0" Maximum="100" Value="0"/>
                <TextBlock x:Name="lblProgress" Text="0/0 (0%)" HorizontalAlignment="Center" Margin="0,5,0,15"/>

                <!-- LOG -->
                <TextBlock Text="📝 Gerçek Zamanlı Log:" FontWeight="Bold" FontSize="13" Margin="0,0,0,5"/>
                <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer Height="300">
                        <TextBox x:Name="txtLog" IsReadOnly="True" 
                                 FontFamily="Consolas" FontSize="10"
                                 Background="#1A1A1A" Foreground="White"
                                 BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- SAĞ PANEL -->
            <StackPanel Grid.Column="2">
                <!-- İSTATİSTİKLER KARTI -->
                <Border Background="White" CornerRadius="5" Padding="12"
                        BorderBrush="#BDC3C7" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📊 İstatistikler" 
                                   Foreground="#2C3E50" 
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- HIZ -->
                            <Border Grid.Row="0" Grid.Column="0" Background="#3498db" 
                                    CornerRadius="5" Padding="12" Margin="2">
                                <StackPanel>
                                    <TextBlock Text="⚡ HIZ" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                    <TextBlock x:Name="lblSpeed" Text="0 CPM" 
                                               Foreground="White" 
                                               FontSize="16" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- BAŞARI -->
                            <Border Grid.Row="0" Grid.Column="1" Background="#2ecc71" 
                                    CornerRadius="5" Padding="12" Margin="2">
                                <StackPanel>
                                    <TextBlock Text="✅ BAŞARI" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                    <TextBlock x:Name="lblSuccess" Text="0%" 
                                               Foreground="White" 
                                               FontSize="16" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- HİTLER -->
                            <Border Grid.Row="1" Grid.Column="0" Background="#f39c12" 
                                    CornerRadius="5" Padding="12" Margin="2">
                                <StackPanel>
                                    <TextBlock Text="🎯 HİTLER" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                    <TextBlock x:Name="lblHits" Text="0" 
                                               Foreground="White" 
                                               FontSize="16" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- SÜRE -->
                            <Border Grid.Row="1" Grid.Column="1" Background="#9b59b6" 
                                    CornerRadius="5" Padding="12" Margin="2">
                                <StackPanel>
                                    <TextBlock Text="⏱️ SÜRE" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                    <TextBlock x:Name="lblTime" Text="00:00:00" 
                                               Foreground="White" 
                                               FontSize="16" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- STATUS BAR -->
        <StatusBar Grid.Row="3" Background="#2C3E50">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="🚀 Zitronts Proxy Scanner V12 - Hazır" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="lblDateTime" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Controls:MetroWindow>